{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "extends": "airbnb",
  "rules": {
    "no-unused-expressions": [2, {"allowShortCircuit": true, "allowTernary": true }],
    "no-mixed-operators":0,
    "comma-dangle": ["error", "never"],
    "no-console": [1, { "allow": ["warn", "error"] }],
    "react/no-danger":0,
    "no-plusplus": 0,
    "consistent-return": 0,
    "no-undef": 1,
    "no-unused-vars": 1
  },
  "env": {
    "browser": true
  },
  "globals": {
      "KeyEvent": true,
      "DEBUG":true
  }
}
